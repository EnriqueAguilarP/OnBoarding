import numpy as np
import matplotlib.pyplot as plt
data = np.random.default_rng(12345)
oxy_nums = data.integers(low=0, high=10, size=10)

plt.bar(range(len(oxy_nums)), oxy_nums)
plt.show()

#Calculo la velocidad de la nave y el tiempo en alcanzarla
velocidadFinal = 11200
velocidadInicial = 0
acceleracion = 9.8

tiempo = (velocidadFinal-velocidadInicial) / aceleracion
print("Los segundos necesarios para alcanzar la velocidad ", velocidadFinal, "es de :" , tiempo) 
